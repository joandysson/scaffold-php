{
  "openapi": "3.0.3",
  "info": {
    "title": "Scaffold PHP API",
    "version": "1.0.0",
    "description": "Basic health check endpoint."
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "tags": ["Health"],
        "responses": {
          "200": {
            "description": "Application is healthy.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    }
                  },
                  "required": ["status"]
                }
              }
            }
          }
        },
        "security": [
          {"basicAuth": []}
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  }
}
