{
    "name": "toolz/scaffold-php",
    "version": "0.0.1",
    "description": "App",
    "authors": [
        {
            "name": "Joandysson Gama",
            "email": "joandysson.gama@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "phpunit/phpunit": "^11.1.3",
        "vlucas/phpdotenv": "^5.6",
        "guzzlehttp/guzzle": "^7.0",
        "ext-pdo": "*",
        "ext-intl": "*",
        "ext-zlib": "*",
        "ext-iconv": "*",
        "sentry/sentry": "^4.10",
        "openai-php/client": "^0.12.0",
        "zircote/swagger-php": "^5.7"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "config/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests",
        "phpcs": [
            "./vendor/bin/phpcs ./app ./config"
        ],
        "phpcbf": [
            "./vendor/bin/phpcbf ./app ./config"
        ],
        "phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon.dist --memory-limit=512M"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
